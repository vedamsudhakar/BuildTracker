@model IEnumerable<BuildTracker.Models.BuildAnalyticsViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Build Analytics</h1>
    <p class="lead">Overview of released builds by type.</p>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 d-flex justify-content-center">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-center">
                    <canvas id="buildsChart" width="375" height="375"
                        style="display: block; box-sizing: border-box; height: 300px; width: 300px;">
                    </canvas>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card text-center border-primary">
                    <div class="card-header bg-primary text-white">
                        @item.ApplicationName
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">@item.Count</h3>
                        <p class="card-text">Builds Released</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var ctx = document.getElementById('buildsChart').getContext('2d');
        var buildData = @Html.Raw(Json.Serialize(Model));
        
        var labels = buildData.map(function(e) { return e.buildType; });
        var data = buildData.map(function(e) { return e.count; });
        
        // Generate random colors for each segment
        var backgroundColors = [
            'rgba(255, 99, 132, 0.7)',
            'rgba(54, 162, 235, 0.7)',
            'rgba(255, 206, 86, 0.7)',
            'rgba(75, 192, 192, 0.7)',
            'rgba(153, 102, 255, 0.7)',
            'rgba(255, 159, 64, 0.7)'
        ];

        var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    label: '# of Builds',
                    data: data,
                    backgroundColor: backgroundColors,
                    borderColor: backgroundColors.map(c => c.replace('0.7', '1')),
                    borderWidth: 1
                }]
            },
            options: {
                responsive: false,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    title: {
                        display: true,
                        text: 'Build Distribution'
                    }
                }
            }
        });
    });
</script>

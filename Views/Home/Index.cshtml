@model IEnumerable<BuildTracker.Models.BuildAnalyticsViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-4">Build Analytics</h1>
    <p class="lead">Overview of released builds by type.</p>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5 d-flex justify-content-center mb-4">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-center">
                    <canvas id="buildsChart" width="350" height="350"
                        style="display: block; box-sizing: border-box; height: 300px; width: 300px;">
                    </canvas>
                </div>
            </div>
        </div>
        <div class="col-md-5 d-flex justify-content-center mb-4">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-center">
                    <canvas id="bugsChart" width="350" height="350"
                        style="display: block; box-sizing: border-box; height: 300px; width: 300px;">
                    </canvas>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card text-center border-primary h-100">
                    <div class="card-header bg-primary text-white">
                        @item.ApplicationName
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <h3 class="card-title">@item.Count</h3>
                                <p class="card-text small">Builds</p>
                            </div>
                            <div class="col-6 border-start">
                                <h3 class="card-title text-danger">@item.BugCount</h3>
                                <p class="card-text small">Bugs</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var analyticsData = @Html.Raw(Json.Serialize(Model));
        
        var labels = analyticsData.map(function(e) { return e.applicationName; });
        var buildCounts = analyticsData.map(function(e) { return e.count; });
        var bugCounts = analyticsData.map(function(e) { return e.bugCount; });
        
        // Generate random colors for each segment
        var backgroundColors = [
            'rgba(255, 99, 132, 0.7)',
            'rgba(54, 162, 235, 0.7)',
            'rgba(255, 206, 86, 0.7)',
            'rgba(75, 192, 192, 0.7)',
            'rgba(153, 102, 255, 0.7)',
            'rgba(255, 159, 64, 0.7)'
        ];

        // Builds Chart
        var ctxBuilds = document.getElementById('buildsChart').getContext('2d');
        new Chart(ctxBuilds, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    label: '# of Builds',
                    data: buildCounts,
                    backgroundColor: backgroundColors,
                    borderColor: backgroundColors.map(c => c.replace('0.7', '1')),
                    borderWidth: 1
                }]
            },
            options: {
                responsive: false,
                maintainAspectRatio: true,
                plugins: {
                    legend: { position: 'bottom' },
                    title: { display: true, text: 'Builds Distribution' }
                }
            }
        });

        // Bugs Chart
        var ctxBugs = document.getElementById('bugsChart').getContext('2d');
        new Chart(ctxBugs, {
            type: 'doughnut',
            data: {
                labels: labels,
                datasets: [{
                    label: '# of Bugs',
                    data: bugCounts,
                    backgroundColor: backgroundColors,
                    borderColor: backgroundColors.map(c => c.replace('0.7', '1')),
                    borderWidth: 1
                }]
            },
            options: {
                responsive: false,
                maintainAspectRatio: true,
                plugins: {
                    legend: { position: 'bottom' },
                    title: { display: true, text: 'Bugs Distribution' }
                }
            }
        });
    });
</script>

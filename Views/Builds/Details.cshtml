@model BuildTracker.Models.BuildInfo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BuildInfo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Application)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Application.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BuildPath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuildPath)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseNotes)
        </dt>
        <dd class = "col-sm-10" style="white-space: pre-wrap">
            @Html.Raw(Model.ReleaseNotes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Version)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Version)
        </dd>
    </dl>
</div>

<div>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Associated Bugs</h4>
        <a asp-controller="Bugs" asp-action="Create" asp-route-applicationId="@Model.ApplicationId" asp-route-buildId="@Model.Id" class="btn btn-sm btn-danger">Report Bug for this Build</a>
    </div>
    
    @if (Model.Bugs != null && Model.Bugs.Any())
    {
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Severity</th>
                    <th>Status</th>
                    <th>Assigned To</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bug in Model.Bugs.OrderByDescending(b => b.CreatedDate))
                {
                    <tr>
                        <td>BUG-@bug.Id</td>
                        <td>@bug.Title</td>
                        <td>
                            <span class="badge bg-@(bug.Severity == BuildTracker.Models.BugSeverity.Critical ? "danger" : bug.Severity == BuildTracker.Models.BugSeverity.High ? "warning" : "info")">
                                @bug.Severity
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-@(bug.Status == BuildTracker.Models.BugStatus.Closed ? "success" : bug.Status == BuildTracker.Models.BugStatus.Fixed ? "primary" : "secondary")">
                                @bug.Status
                            </span>
                        </td>
                        <td>@(bug.AssignedToUser?.UserName ?? "-")</td>
                        <td>
                            <a asp-controller="Bugs" asp-action="Details" asp-route-id="@bug.Id" class="btn btn-sm btn-info">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No bugs reported for this build.</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
